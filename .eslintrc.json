{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "ignorePatterns": ["*.svg", "*.scss"],
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "error",
            4
        ],
        "quotes": [
            "error",
            "single"
        ],
        "no-console": [
            "warn"
        ],
        "default-case": [
            "warn"
        ],
        "no-empty-function": [
            "warn"
        ],
        "no-trailing-spaces": [
            "error"
        ],
        "prefer-const": [
            "error",
            {"destructuring": "any"}
        ],
        "react/jsx-curly-spacing": [
            "error",
            {"when": "never", "children": {"when": "always"}}
        ],
        "react/prop-types": [0]
    }
}
